{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/../NWB_files",
    "$NETWORK_DIR": "$BASE_DIR/network",
    "$COMPONENT_DIR": "$BASE_DIR/../filter_components"
  },

  "run": {
    "tstop": 2000.0,
    "dt": 0.1,
    "overwrite_output_dir": true
  },

  "target_simulator":"LGNModel",

  "conditions": {
    "jitter_lower": 0.75,
    "jitter_upper": 1.25
  },

  "inputs": {
    "LGN_spikes": {
      "input_type": "movie",
      "module": "graiting",
      "row_size": 120,
      "col_size": 240,
      "gray_screen_dur": 0.5,
      "cpd": 0.04,
      "temporal_f": 4.0,
      "contrast": 0.8,
      "evaluation_options": {
        "downsample": 1,
        "separable": true
      }
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "rates_csv": "rates.csv",
    "spikes_csv": "spikes.csv",
    "spikes_file": "spikes.h5",
    "overwrite_output_dir": true
  },

  "network": "config.circuit.json"
}
